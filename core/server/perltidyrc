#-lp
#-cti=1
--indent-columns 8   # Indent level is 4 cols
-ci              4   # Continuation indent is 4 cols
-l               78  # Max line width is 78 cols
-bl                  # Braces will always be placed left
-pt=1                # Medium paranthesis tightness
-bt=2                # Medium brace tightness
-sbt=2               # Medium square bracket tightness
-bbt=1               # Medium block brace tightness
-nsfs                # No space before semicolons
-nolq                # Don't outdent long quoted strings
-vtc=2               # Maximal vertical tightness (");" on same line)
-vt=2                # Maximal vertical tightness
-sbvt=0              # Always insert a newline
-sbvtc=0             # Always put the closing brace to a new line
